<!-- Generic error page for errors that preclude rendering an error message on the current page.-->
<style>    
	h1 {
      font-size: 2.5rem;
      color: #ff6f61;
      margin-bottom: 15px;
    }

    p {
      font-size: 1.2rem;
      color: #333;
      margin-bottom: 30px;
    }

    .btn {
      margin-top: 10px;
      height: 50px;
      font-size: 1.1rem;
      padding: 12px 24px;
      background-color: #ffb6b9;
      color: white;
      text-decoration: none;
      border-radius: 12px;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #fff8f0;
      background-image: url("/resources/images/paw-bg-light.png"); /* Optional */
      background-repeat: repeat;
      background-size: 100px;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      flex-direction: column;
      text-align: center;
    }

    .btn:hover {
      background-color: #ff6f61;
      transform: translateY(-2px);
    }
</style>
<h1>{{errMsg}}</h1>

<img src = "{{errImg}}" width = 500 height=400/>
<p>{{errHint}}</p>

<a class = "btn" href = "/">Return Home</button>
