<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store</title>
    <link rel="stylesheet" href="/css/store.css">
</head>
<body>
    <div id="store-container"></div>

    <script id="store-template" type="text/x-handlebars-template">
        <div class="store">
            {{#each sections}}
                <div class="section">
                    <h2>{{title}}</h2>
                    <div class="cards">
                        {{#each items}}
                            <div class="card">
                                <img src="{{image}}" alt="{{title}}" />
                                <h3>{{title}}</h3>
                                <p>{{description}}</p>
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        </div>
    </script>

    <script src="/js/store.js"></script>
</body>
</html>