<div id="shop-container"></div>
<style>
button {
  background-color: #04AA6D; /* Green */
  border: none;
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  height: 50px;
  width: 150px;
  padding: 10px 24px;
}

</style>

<div class="shop">
    {{#each sections}}
        <div class="section">
            <h2>{{title}}</h2>
            <div class="cards">
                {{#each items}}
                    <div class="card">
                        <img src="{{image}}" alt="{{title}}" style="width:200px;height:150px;" />
                        <h3>{{title}}</h3>
                        <p>{{description}}</p>
                        <button class="add-to-cart" data-id="{{id}}">Add to Cart</button>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/each}}
</div>


<div id="cart-dropdown" class="cart-dropdown hidden">
    <h3>Shopping Cart</h3>
    <ul id="cart-items">
        <!-- Cart items will be dynamically added here -->
    </ul>
    <button id="checkout-button">Checkout</button>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const cartDropdown = document.getElementById('cart-dropdown');
        const cartItemsList = document.getElementById('cart-items');
        const addToCartButtons = document.querySelectorAll('.add-to-cart');

        // Toggle cart dropdown visibility
        document.getElementById('shop-container').addEventListener('click', () => {
            cartDropdown.classList.toggle('hidden');
        });

        // Add to cart functionality
        addToCartButtons.forEach(button => {
            button.addEventListener('click', (event) => {
                const itemId = event.target.getAttribute('data-id');
                const itemTitle = event.target.previousElementSibling.previousElementSibling.textContent;

                const listItem = document.createElement('li');
                listItem.textContent = itemTitle;
                cartItemsList.appendChild(listItem);
            });
        });
    });
</script>

<style>
    .cart-dropdown {
        position: absolute;
        top: 10px;
        right: 10px;
        background: white;
        border: 1px solid #ccc;
        padding: 10px;
        width: 200px;
        display: none;
    }

    .cart-dropdown.hidden {
        display: none;
    }

    .cart-dropdown ul {
        list-style: none;
        padding: 0;
    }

    .cart-dropdown ul li {
        margin-bottom: 5px;
    }
</style>
