<style>
	
datalist {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

option {
  padding: 0;
}

[type=radio] { 
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

input[type=radio] + div {
  cursor: pointer;
}

[type=radio]:checked + div {
  outline: 3px solid #6610f2;
}
</style>

<!-- note that since we don't have the pet page made actually submitting this will just display a sorted array -->

<form action = "/purrsonality-quiz" method = "POST">
	<div class="form-group border-bottom border-1">
		<h5> I want to adopt a: </h5> <br>
		<div class = "form-check form-check-inline">
			<label class = "form-check-label" for = "dog">
				<input class = "form-check-input" type = "radio" name = "species" id = "dog" value = "dog" />
				<div class = "card text-center shadorangew">
					<img class = "card-img-top" src = "/resources/images/corgi.jpg" width = 300 height = 200>
					<div class = "card-body">
						<h5 class = "card-title">Dog</h5>
					</div>
				</div>
			</label>
		</div>
		<div class = "form-check form-check-inline">
			<label class = "form-check-label" for = "cat">
				<input class = "form-check-input" type = "radio" name = "species" id = "cat" value = "cat"/>
				<div class = "card text-center shadow">
					<img class = "card-img-top" src = "/resources/images/cat.jpg" width = 300 height = 200>
					<div class = "card-body">
						<h5 class = "card-title">Cat</h5>
					</div>
				</div>
			</label>
		</div>
		<div class = "form-check form-check-inline">
			<label class = "form-check-label" for = "small">
				<input class = "form-check-input" type = "radio" name = "species" id = "small" value = "small" checked />
				<div class = "card text-center shadow">
					<img class = "card-img-top" src = "/resources/images/hamster.jpg" width = 300 height = 200>
					<div class = "card-body">
						<h5 class = "card-title">Something Else</h5>
					</div>
				</div>
			</label>
		</div><br><br>
	</div>
	{{#each traits}}
	<div class="form-group border-bottom border-1">
		<label> <h5> My ideal pet is: </h5> </label><br> 
		<input type = "range" class = "form-range w-50" min = -1 max = 1 step = "0.01" name = "{{this.trait_name}}" list="trait_values"/>

		<datalist id = "trait_values" class="w-50">
			<option value = -1 label = "{{this.min_extreme}}"></option>
			<option value = 1 label = "{{this.max_extreme}}"></option>
		</datalist><br><br>
	</div>
	{{/each}}
	<input class = "btn btn-primary" type = "submit" value = "Submit"/>
</form>
