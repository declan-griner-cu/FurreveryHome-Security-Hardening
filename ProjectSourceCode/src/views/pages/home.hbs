<div class="home-page-container">
  <div class="pages-container">
    <div id = "page-container">
     {{>petPage}}
     </div>
  
  
  
  
    <ul data = '{{data}}' selected = '0' class = 'page-nav'>
      {{#each pages}}
      <li><button class  = 'page-button'>{{@index}}</button></li>
      {{/each}}
  
    </ul>
  </div>
  
   <form action="" class="filter-form">
    <h1>Filter Pets</h1>
<ul>
  
    <li>
      <button type="button" data-toggle="collapse" data-target="#animal-select">Animal</button>
        <div class="form-group collapse" id = "animal-select">
           <div class="form-check">
            <input class="form-check-input" type="checkbox" value="cat" id="cat" >
            <label class="form-check-label" for="cat">
          Cat
            </label>
        </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="dog" id="dog">
            <label class="form-check-label" for="dog">
              Dog
            </label>
          </div>
        </div>
    </li>
    <li>
      <button type="button" data-toggle="collapse" data-target="#gender-select">Gender</button>
        <div class="form-group collapse" id = "gender-select">
           <div class="form-check">
            <input class="form-check-input" type="checkbox" value="male" id="male" >
            <label class="form-check-label" for="male">
          Male
            </label>
        </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="female" id="female">
            <label class="form-check-label" for="female">
              Female
            </label>
          </div>
        </div>
    </li>
  
    <li>
      <button type="button" data-toggle="collapse" data-target="#age-select">Age</button>
        <div class="form-group collapse" id="age-select">
           <div class="form-check">
            <input class="form-check-input" type="checkbox" value="baby" id="baby" >
            <label class="form-check-label" for="baby">
          Baby
            </label>
        </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="young" id="young">
            <label class="form-check-label" for="young">
              Young
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="adult" id="adult" >
            <label class="form-check-label" for="adult">
          Adult
            </label>
        </div>
         <div class="form-check">
            <input class="form-check-input" type="checkbox" value="senior" id="senior" >
            <label class="form-check-label" for="senior">
          Senior
            </label>
        </div>
        </div>
    </li>
  
    <li>
      <button type="button" data-toggle="collapse" data-target="#size-select">Size</button>
        <div class="form-group collapse" id="size-select">
           <div class="form-check">
            <input class="form-check-input" type="checkbox" value="small" id="small" >
            <label class="form-check-label" for="small">
          Small
            </label>
        </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="medium" id="medium">
            <label class="form-check-label" for="medium">
              Medium
            </label>
          </div>
            <div class="form-check">
            <input class="form-check-input" type="checkbox" value="large" id="large">
            <label class="form-check-label" for="large">
              Large
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="xlarge" id="xlarge">
            <label class="form-check-label" for="xlarge">
              Extra Large
            </label>
          </div>
        </div>
    </li>
  
  
    <li>
      <button type="button" data-toggle="collapse" data-target="#other-select">Other</button>
      <div class="form-group collapse" id="other-select">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="good_with_cats" id="good_with_cats">
            <label class="form-check-label" for="good_with_cats">
              Good with cats
            </label>
          </div>
         <div class="form-check">
            <input class="form-check-input" type="checkbox" value="good_with_dogs" id="good_with_dogs">
            <label class="form-check-label" for="good_with_dogs">
              Good with dogs
            </label>
          </div>
         <div class="form-check">
            <input class="form-check-input" type="checkbox" value="good_with_children" id="good_with_children">
            <label class="form-check-label" for="good_with_children">
              Good with children
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="house_trained" id="house_trained">
            <label class="form-check-label" for="house_trained">
              House Trained
            </label>
          </div>
           <div class="form-check">
            <input class="form-check-input" type="checkbox" value="special_needs" id="special_needs">
            <label class="form-check-label" for="special_needs">
              Special Needs
            </label>
          </div>
    </li>
  
  
  
</ul>
  <button type="submit" class="btn btn-primary">Get Pets</button>



  </div>


   </form>
</div>