<div class="pet-grid .container-lg">
  {{#each animals}}
    <div class="card pet-container">
      <img class="card-img-top" src={{this.photo}} alt="" />

      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
      </div>
        <div class = "btn-container">
          <button  data-bs-toggle="modal"><img src="/images/contact.svg" alt="contact"></img></button>
           <button><img class = "infoBtn {{this.index}}" src="/images/pet_info.svg" alt="info"></img></button>
        </div>
      
    </div>
  {{/each}}
</div>